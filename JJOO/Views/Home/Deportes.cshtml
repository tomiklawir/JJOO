@{
    ViewData["Title"] = "Deportes";
}

<body>
  <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                    <a class="navbar-brand" href="index (1).html"><img src="img/juegos olimpicos.png" alt="" href="@Url.Action("Index")"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                    </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href='@Url.Action("Deportes")'>Deportes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Paises")'>Paises</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("AgregarDeportista")'>Agregar Deportista</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Creditos")'>Creditos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    @foreach(Deporte dep in ViewBag.ListarDeportes){
        <li>
            <a href='@Url.Action("Detallepais", new{IdDeporte = dep.IdDeporte})'>
                <img src= "@dep.Foto" alt="Foto de @dep.Nombre">
                <p>@dep.Nombre</p>
            </a>
        </li>
    }
</body>